<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/6.5"
        id          = "net.dezaro.sta"
        versionCode = "10"
        version     = "1.1.3" >

    <!-- versionCode is optional and Android only -->

    <name>Sta mobile</name>
    <description>
        Slavic Truckers Association mobile application
    </description>

    <author href="http://namgam.com" email="support@namgam.com">
      Pavlushyn Victor
    </author>

    <preference name="android-build-tool" value="gradle" />
   stanet <platform name="android" >
        <allow-intent href="geo:*"/>
        <allow-intent href="http://*"/>
        <allow-intent href="https://*"/>
        <allow-navigation href="https://*"/>
        <access origin="*"/>
    </platform>
    <platform name="ios" >
        <allow-intent href="geo:*"/>
        <allow-intent href="http://*"/>
        <allow-intent href="https://*"/>
        <allow-navigation href="https://*"/>
        <access origin="*"/>
    </platform>
    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="xwalkMultipleApk" value="false" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <plugin name="cordova-plugin-geolocation" spec="2.2.0"/>
    <plugin name="cordova-plugin-network-information" spec="1.2.1"/>
    <plugin name="cordova-plugin-wkwebview-engine" spec="1.0.3"/>
    <plugin name="cordova-plugin-audioinput" spec="0.3.0">
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="App would like to access the microphone." />
    </plugin>
    <plugin name="cordova-plugin-camera" spec="2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="App would like to access the camera." />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="App would like to access the library." />
    </plugin>
    <plugin name="cordova-plugin-inappbrowser" spec="1.4.0"/>
    <plugin name="cordova-plugin-crosswalk-webview" spec="2.3.0"/>
    <plugin name="cordova-plugin-keyboard" spec="1.1.5"/>
    <plugin name="cordova-plugin-compat" spec="1.0.0"/>
    <plugin name="cordova-plugin-vibration" spec="2.1.5"/>
    <plugin name="cordova-plugin-dialogs" spec="1.3.3"/>
    <plugin name="de.appplant.cordova.plugin.local-notification-custom" spec="0.8.4"/>
    <plugin name="cordova-plugin-whitelist" spec="1.2.2"/>
    <plugin name="cordova-plugin-statusbar" spec="2.2.3"/>
    <plugin name="cordova-plugin-status-bar-notification" spec="1.0.6"/>
    <plugin name="cordova-plugin-background-mode" spec="0.7.2"/>
    <plugin name="cordova-plugin-badge" spec="0.8.2"/>
    <platform name="android" >
        <preference name="android-minSdkVersion" value="16"/>
        <preference name="android-targetSdkVersion" value="22"/>
        <preference name="android-installLocation" value="auto"/>
        <preference name="android-signed" value="true"/>
        <preference name="Fullscreen" value="false"/>
        <preference name="AndroidLaunchMode" value="singleTop"/>
    </platform>



</widget>